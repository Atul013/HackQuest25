# Environment Variables Configuration

# Server
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/publicalert
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Geofencing Configuration
GEOFENCE_UPDATE_INTERVAL=300000  # 5 minutes in milliseconds
GEOFENCE_EXIT_GRACE_PERIOD=1800000  # 30 minutes in milliseconds
GEOFENCE_DEFAULT_RADIUS=500  # default radius in meters

# Firebase Cloud Messaging (for push notifications)
FCM_SERVER_KEY=your-firebase-server-key
FCM_PROJECT_ID=your-firebase-project-id

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN=your-sentry-dsn-if-using-sentry

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# Scheduler
CLEANUP_INTERVAL=*/5 * * * *  # every 5 minutes
CACHE_REFRESH_INTERVAL=*/30 * * * *  # every 30 minutes
ANALYTICS_INTERVAL=0 * * * *  # every hour

# Location Tracking
MAX_LOCATION_AGE=60000  # 1 minute
HIGH_ACCURACY_MODE=true
LOCATION_TIMEOUT=10000  # 10 seconds
